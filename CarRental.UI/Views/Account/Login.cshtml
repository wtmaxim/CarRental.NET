
@model CarRental.Model.UserDTO
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewBag.Title = "Login";
}


    
   

<p class="login-box-msg">Connectez vous !</p>

@using (Html.BeginForm("Autherize", "Account", FormMethod.Post))

{
    <div class="form-group has-feedback row">
        <div class="col-xs-12 col-md-4">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="col-xs-12 col-md-8">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <br />
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="form-group has-feedback row">
        <div class="col-xs-12 col-md-4">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="col-xs-12 col-md-8">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })<span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <br />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    <div class="row">
        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
    </div>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <input type="submit" class="btn btn-primary btn-block btn-flat" value="Connexion">
        </div>
        <div class="col-xs-2"></div>
    </div>
}
<br />
<a href="@Url.Action("PasswordReset","Account")">J'ai oublié mon mot de passe</a>
