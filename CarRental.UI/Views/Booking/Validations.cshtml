@model CarRental.UI.ViewsModels.Booking.BookingValidationsViewsModel
@using CarRental.Model;

@{
    ViewBag.Title = "Validations";
}

    <section class="content">

        <!-- Filters -->
        <div class="box collapsed-box">

            <div class="box-header with-border">
                <h3 class="box-title">Filtres</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Statut de la demande</label>
                            <select class="form-control">
                                <option class="text-red">En cours d'acceptation</option>
                                <option class="text-light-blue">Acceptée</option>
                                <option>Terminée</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Origine de la demande</label>
                            <select class="form-control">
                                <option>Campus de Nantes</option>
                                <option>Campus de Nantes Faraday</option>
                                <option>Campus de Rennes</option>
                                <option>Campus de Niort</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label>Voitures disponibles</label>
                        <div class="form-group row">
                            <div class="radio col-xs-3 marginTop">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="yes">
                                    Oui
                                </label>
                            </div>
                            <div class="radio col-xs-3 marginTop">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="no">
                                    Non
                                </label>
                            </div>
                            <div class="radio col-xs-3 marginTop">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="all" checked="">
                                    Tout
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Demands list -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Liste des demandes de réservations
                </h3>
            </div>
            <div class="box-body">
                <ul class="control-sidebar-menu">

                    @foreach (Booking booking in Model.Bookings)
                    {
                    <li>
                        <a href="./rents_validation_card.html">
                            <h4 class="control-sidebar-subheading">
                                <strong>John Doe</strong>
                                <span class="text-muted">
                                    20/04 au 23/04 - Nantes à Bordeaux <br>
                                </span>
                                <span class="label label-success pull-right">EN ACCEPTATION</span>
                                <span class="label label-success pull-right">2 VOITURE(S)</span>
                            </h4>
                        </a>
                        <p>
                            @booking.stopOver.Departure_Date au @booking.stopOver.Arrival_Date - @booking.addressAller.Locality à @booking.addressRetour.Locality<br>
                        </p>

                        <p>
                            <span class="label label pull-right"><a href="@Url.Action("Validation", "Booking", new { id = booking.requestBooking.id })"> @booking.status.Libelle</a></span>
                        </p>
                    </li>
                    }

                    
                </ul>
            </div>
        </div>

    </section>