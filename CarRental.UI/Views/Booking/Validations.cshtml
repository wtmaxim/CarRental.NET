        <!-- Demands list -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Liste des demandes de réservations
                </h3>
            </div>
            <div class="box-body">

                @if (Model.Bookings.Count > 0)
                {
                    foreach (Booking booking in Model.Bookings)
                    {
                        <ul class="control-sidebar-menu">
                            <li>
                                <a href="@Url.Action("Validation", "Booking", new { id = booking.requestBooking.id })">
                                    <h4 class="control-sidebar-subheading">
                                        <strong>@booking.createdBy.Firstname @booking.createdBy.Lastname</strong>
                                        <span class="text-muted">
                                            @booking.stopOver.Departure_Date.ToString("dd/MM/yyyy") au @booking.stopOver.Arrival_Date.ToString("dd/MM/yyyy") - @booking.addressAller.Locality à @booking.addressRetour.Locality <br>
                                        </span>
                                        @if (booking.status.Libelle.ToLower() == "en acceptation")
                                        {
                                        <span class="label label-primary">@booking.status.Libelle</span>
                                        }
                                        else if (booking.status.Libelle.ToLower() == "accepté")
                                        {
                                        <span class="label label-success">@booking.status.Libelle</span>
                                        }
                                        else if (booking.status.Libelle.ToLower() == "refusé")
                                        {
                                        <span class="label label-danger">@booking.status.Libelle</span>
                                        }
                                        else if (booking.status.Libelle.ToLower() == "terminé")
                                        {
                                        <span class="label label-default">@booking.status.Libelle</span>
                                        }
                                        else
                                        {
                                        <span class="label label-default">@booking.status.Libelle</span>
                                        }
                                    </h4>
                                </a>
                            </li>
                        </ul>
                    }
                }
                else
                {
                <p>Aucune demande de validation pour l'instant.</p>
                }
                                                                     
