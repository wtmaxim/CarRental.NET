    defaultView: 'dayGridMonth',
    defaultDate: '2019-07-07',
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'dayGridMonth,timeGridWeek,timeGridDay'
    },
    events: [
      {
        title: 'All Day Event',
        start: '2019-07-01'
      },
      {
        title: 'Long Event',
        start: '2019-07-07',
        end: '2019-07-10'
      },
      {
        groupId: '999',
        title: 'Repeating Event',
        start: '2019-07-09T16:00:00'
      },
      {
        groupId: '999',
